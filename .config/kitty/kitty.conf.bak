# Kitty terminal file configuration

# Font settings
#font_family Caskaydia Cove Nerd Font
font_family Sauce Code Pro Nerd Font
font_size 12.0
bold_font auto
italic_font auto
bold_italic_font auto
disable_ligatures never

# Force left to right
force_ltr no

# Cursor settings 
shell_integration no-cursor
cursor_shape underline
cursor_underline_thickess 1.0
cursor_blink_interval -1
cursor_stop_blinking_after 10.0
default_pointer_shape arrow
default_shape_when_dragging hand

# History
scrollback_lines 2000

# Allows clicking on active links and open them within a browser
#url_color red
url_style none 
open_url_with brave
detect_urls yes
show_hyperlink_targets yes

# 
copy_on_select yes

enable_audio_bell no
visual_bellduration 0.4
# visual_bell_color white

remember_window_size yes
initial_window_width 640
initial_window_height 400
window_resize_step_cells 2
window_resize_step_lines 2
window_border_width 0.5
draw_minimal_borders yes
windows_margin_width 0
single_window_margin_width -1
window_padding_width 2
# active_border_color none
# inactive_border_color #cccccc

inactive_text_alpha 0.5
window_logo_path none

tab_bar_edge bottom
tab_bar_margin_width 0.0
tab_bar_marginheight 0.0 0.0
tab_bar_style separator
tab_bar_align left
tab_bar_min_bar 2
tab_separator " | "
# active_tab_foreground #716C82
# active_tab_background #B788DD
active_tab_font_style italic
# inactive_tab_foreground #716C82
inactove_tab_background #cccccc
inactive_tab_font_style normal

background_opacity 0.4
#backgorund_image
#background_image_layout tiled | mirror-tiled | scaled | clamped | centered

# If background_image_layout is scaled
#background_image_linear no | yes

# Change opacity dinamically using keyboard shortcuts
#dynamic_background_opacity no 
#backround_tint 0.0 
#background_tint_gaps 1.0
# selection_foreground none
# selection_background none



# BEGIN_KITTY_THEME
# Default
include current-theme.conf
# END_KITTY_THEME